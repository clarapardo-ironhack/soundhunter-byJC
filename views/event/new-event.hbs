<div class="container">

    {{#if errorMessage}}
    <div id="errorMessage">
        <p><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-exclamation-diamond" viewBox="0 0 16 16">
                <path
                    d="M6.95.435c.58-.58 1.52-.58 2.1 0l6.515 6.516c.58.58.58 1.519 0 2.098L9.05 15.565c-.58.58-1.519.58-2.098 0L.435 9.05a1.482 1.482 0 0 1 0-2.098L6.95.435zm1.4.7a.495.495 0 0 0-.7 0L1.134 7.65a.495.495 0 0 0 0 .7l6.516 6.516a.495.495 0 0 0 .7 0l6.516-6.516a.495.495 0 0 0 0-.7L8.35 1.134z" />
                <path
                    d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" />
            </svg> {{errorMessage}}</p>
    </div>
    {{/if}}

    <div class="row mt-5">
        <div class="col-md-4 event-text">
            <h6>Create an event
            </h6>
        </div>
        <div class="col-md-8">
            <form action="/event/add-new" method="POST" enctype="multipart/form-data">
                <div>
                    {{!-- <label for="name" class="form-label">Events name</label> --}}
                    <input type="text" class="form-control form-box" style="font-size: 2em" id="name"
                        placeholder="Event's name" name="name" value="{{name}}">
                </div>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <label for="artists" class="form-label form-label-white">Collaborating artists</label>
                        <select class="form-select" name="artists" id="artists" multiple>

                            {{#each allArtists}}
                            <option value="{{id}}">{{name}}</option>
                            {{/each}}

                        </select>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <label for="date" class="form-label form-label-white">Location</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-box" id="street" name="street"
                                    placeholder="Street" value="{{street}}">
                                <input type="text" class="form-control mt-3 form-box" id="number" placeholder="Number"
                                    name="number" value="{{number}}">
                                <input type="text" class="form-control mt-3 form-box" id="postcode"
                                    placeholder="Postcode" name="postcode" value="{{postcode}}">
                                <input type="text" class="form-control mt-3 form-box" id="city" placeholder="City"
                                    name="city" value="{{city}}">


                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-box" id="lat" name="lat"
                                    placeholder="Latitude" value="{{lat}}">
                                <input type="text" class="form-control mt-3 form-box" id="lng" name="lng"
                                    placeholder="Longitude" value="{{lng}}">
                            </div>
                        </div>


                    </div>
                </div>
                <div>
                    <label for="description" class="form-label form-label-white">Description</label>
                    <textarea name="description" id="description" cols="104" rows="6"
                        value="{{description}}"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div>
                            <label for="date" class="form-label form-label-white">Date</label>
                            <input type="datetime-local" class="form-control" id="date" name="date" value="{{date}}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="cover" class="form-label pen-edit-picture form-label-white">Upload the cover of the event</label>
                        <input class="form-control" type="file" id="cover" name="image">

                    </div>

                </div>

                <button type="submit" class="btn btn-primary user-signin-btn mt-5">Save changes</button>
            </form>
        </div>
    </div>

</div>