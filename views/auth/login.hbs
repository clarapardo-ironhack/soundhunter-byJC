<div class="container">

    <div class="row mt-5">
        <div class="col-md-5 text-sign p-5">
            <h1 class="syncopate big-title mb-5">Log in</h1>

            <form action="/login" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control form-box" id="email" name="email">
                </div>
                <div class="mb-3">
                    <label for="pwd" class="form-label">Password</label>
                    <input type="password" class="form-control form-box" id="pwd" name="plainPwd">
                </div>

                {{#if errorMessage}}
                <div id="errorMessage" style="color: black; background-color:brown">
                    <p><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-exclamation-diamond" viewBox="0 0 16 16">
                            <path
                                d="M6.95.435c.58-.58 1.52-.58 2.1 0l6.515 6.516c.58.58.58 1.519 0 2.098L9.05 15.565c-.58.58-1.519.58-2.098 0L.435 9.05a1.482 1.482 0 0 1 0-2.098L6.95.435zm1.4.7a.495.495 0 0 0-.7 0L1.134 7.65a.495.495 0 0 0 0 .7l6.516 6.516a.495.495 0 0 0 .7 0l6.516-6.516a.495.495 0 0 0 0-.7L8.35 1.134z" />
                            <path
                                d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" />
                        </svg> {{errorMessage}}</p>
                </div>
                {{/if}}

                <button type="submit" class="btn user-signin-btn">log in</button>
            </form>
        </div>


        <div class="col md-7 login-image mt-5" style="height:393px;"></div>
    </div>

</div>