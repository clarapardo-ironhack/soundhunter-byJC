        <div class="mt-5 col-md-5">
            <form action="/user/{{_id}}/edit" method="POST">
                <label for="name" class="form-label form-label-white">Name</label>
                <input type="text" class="form-control form-box-border" id="name" name="name" value="{{name}}">

                <label for="lastname" class="form-label form-label-white">Last name</label>
                <input type="text" class="form-control form-box-border" id="lastname" name="lastname"
                    value="{{lastname}}">
                <div class="mb-3">
                    <label for="city" class="form-label form-label-white">City</label>
                    <input type="text" class="form-control form-box-border" id="city" name="city" value="{{location}}">
                </div>
                <div class="mb-3">
                    <label for="favoriteGenres" class="form-label">Favorite genres</label>
                    <select class="form-select" name="favoriteGenres" id="favoriteGenres" value="{{favoriteGenres}}"
                        multiple>

                        {{#each favoriteGenres}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}

                    </select>
            </form>
            <br><br>
            <button type="submit" class="btn btn-primary user-signin-btn">Save changes</button>
            <form action="/user/{{_id}}/delete" method="POST"><br><br>
                <button type="submit" class="btn btn-primary user-signin-btn">Delete</button>
            </form>

        </div>
